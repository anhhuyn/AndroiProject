

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activities.HomeActivity">

    <TextView
        android:id="@+id/txtHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/search_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Thanh tìm kiếm -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/edtSearchbar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@color/gray"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:hint="Tìm kiếm..."
            android:paddingStart="8dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionSearch"/>

        <LinearLayout
            android:id="@+id/top_right_icons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_cart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/cart_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_background"
                    android:text="99+"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="1dp"
                    android:minWidth="23dp"
                    android:minHeight="9dp"
                    android:layout_alignEnd="@id/icon_cart"
                    android:layout_alignTop="@id/icon_cart" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp">

                <ImageView
                    android:id="@+id/icon_notification"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_notification" />

                <TextView
                    android:id="@+id/notification_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_background"
                    android:text="35"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="1dp"
                    android:minWidth="23dp"
                    android:minHeight="9dp"
                    android:layout_alignEnd="@id/icon_notification"
                    android:layout_alignTop="@id/icon_notification" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_container">

        <!-- Phổ biến -->
        <TextView
            android:id="@+id/txtPopular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phổ biến"
            android:textSize="16sp"
            android:textColor="#696969"
            android:gravity="center" />

        <!-- Thanh gạch -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#E0E0E0" />

        <!-- Mới nhất -->
        <TextView
            android:id="@+id/txtNewest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mới nhất"
            android:textSize="16sp"
            android:textColor="#696969"
            android:gravity="center" />

        <!-- Thanh gạch -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#E0E0E0" />

        <!-- Bán chạy -->
        <TextView
            android:id="@+id/txtBestselling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bán chạy"
            android:textSize="16sp"
            android:textColor="#696969"
            android:gravity="center" />

        <!-- Thanh gạch -->
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#E0E0E0" />

        <!-- Giá + Icon lọc -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textSize="16sp"
                android:textColor="#696969"
                android:gravity="center" />

            <ImageView
                android:id="@+id/icon_sort"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_sort"
                android:contentDescription="Sắp xếp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtEmptyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Không tồn tại sản phẩm!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:padding="80dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/search_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="4dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/category_row"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation" />



    <!-- TextView Đăng xuất -->


    <TextView
        android:id="@+id/txtLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_row" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="Trang chủ"
                android:src="@drawable/ic_home_green" />
            <TextView
                android:id="@+id/txtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="13sp"
                android:textColor="@color/green_main"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/icon_store"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_store"
                android:contentDescription="Cửa hàng" />
            <TextView
                android:id="@+id/text_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cửa hàng"
                android:textColor="#696969"
                android:textSize="13sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/icon_category"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_category"
                android:contentDescription="Danh mục" />
            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textColor="#696969"
                android:textSize="13sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Tôi" />
            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi"
                android:textSize="13sp"
                android:textColor="#696969"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
