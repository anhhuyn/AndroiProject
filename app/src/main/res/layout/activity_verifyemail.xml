<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề OTP -->
    <TextView
        android:id="@+id/tv_otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="XÁC THỰC OTP"
        android:textColor="@color/green_main"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Mô tả gửi OTP -->
    <TextView
        android:id="@+id/tv_otp_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Vui lòng nhập mã số chúng tôi đã gửi cho bạn qua email. Mã xác thực có giá trị trong 120s"
        android:textColor="#757575"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/otpTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Mã OTP hết hạn sau: 120 giây"
        android:textColor="#FF0000"
        android:textSize="15sp" />

    <!-- Các ô nhập OTP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Ô nhập OTP 1 -->
        <EditText
            android:id="@+id/otp_box1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- Ô nhập OTP 2 -->
        <EditText
            android:id="@+id/otp_box2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- Ô nhập OTP 3 -->
        <EditText
            android:id="@+id/otp_box3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- Ô nhập OTP 4 -->
        <EditText
            android:id="@+id/otp_box4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- Ô nhập OTP 5 -->
        <EditText
            android:id="@+id/otp_box5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />

        <!-- Ô nhập OTP 6 -->
        <EditText
            android:id="@+id/otp_box6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Nút Tiếp tục -->
    <Button
        android:id="@+id/btn_verifyemail_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green_main"
        android:padding="12dp"
        android:text="Xác nhận"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>

