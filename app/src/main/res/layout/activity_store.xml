<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activities.StoreActivity">

    <!-- Nội dung chính cuộn được -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Video Cửa Hàng -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Giới Thiệu Cửa Hàng"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"/>

            <!-- Tiêu đề -->

            <!-- Thông tin cửa hàng -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chúng tôi chuyên cung cấp nông sản sạch từ các trang trại hữu cơ, hướng đến sức khỏe người tiêu dùng và bảo vệ môi trường."
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sứ mệnh -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌱 Sứ mệnh và Tầm nhìn"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xây dựng cầu nối giữa người nông dân và người tiêu dùng, giúp tiếp cận thực phẩm sạch một cách thuận tiện và minh bạch."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Nguồn gốc -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏡 Nguồn gốc nông sản"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm được thu hoạch trực tiếp từ các hợp tác xã tại Lâm Đồng, Đồng Tháp... với quy trình chuẩn VietGAP và canh tác hữu cơ."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Dịch vụ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📦 Dịch vụ nổi bật"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Giao hàng nhanh trong ngày\n• Đổi trả trong 24h nếu không hài lòng\n• Hỗ trợ tư vấn tận tình\n• Thanh toán đa dạng"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Liên hệ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Liên hệ"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ: 123 Đường Nông Sản, TP. Hồ Chí Minh\nSĐT: 0909 123 456\nEmail: info@ecoveggie.vn\nFacebook: fb.com/ecoveggie"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="Trang chủ"
                android:src="@drawable/ic_home_green" />
            <TextView
                android:id="@+id/txtHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="13sp"
                android:textColor="@color/green_main"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/icon_store"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_store"
                android:contentDescription="Cửa hàng" />
            <TextView
                android:id="@+id/text_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cửa hàng"
                android:textColor="#696969"
                android:textSize="13sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/icon_category"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_category"
                android:contentDescription="Danh mục" />
            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textColor="#696969"
                android:textSize="13sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Tôi" />
            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi"
                android:textSize="13sp"
                android:textColor="#696969"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
